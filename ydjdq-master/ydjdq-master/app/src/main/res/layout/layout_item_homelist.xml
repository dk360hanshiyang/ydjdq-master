<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <com.sudaizhijia.ydjdq.wiget.RoundedImageView
        android:id="@+id/iv_product_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_homelist_icon"
        android:src="@mipmap/ic_default_90" />

    <LinearLayout
        android:id="@+id/ll_product_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_product_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- - - - -"
            android:textColor="@color/operation_tvcolor"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_product_des1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="------"
                android:textColor="@color/tv_tab_normal"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_product_des2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="9dp"
                android:text=" ----"
                android:textColor="@color/tv_tab_normal"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_product_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@mipmap/ic_go" />

    <TextView
        android:id="@+id/tv_product_maxmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@id/iv_product_go"
        android:text="最高 - - - -元"
        android:textColor="@color/red"
        android:textSize="17sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_product_maxmount"
        android:layout_marginTop="10dp"
        android:background="@color/line_color" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_newlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_go_new" />
</RelativeLayout>
