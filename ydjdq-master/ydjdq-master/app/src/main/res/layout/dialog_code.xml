<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <RelativeLayout
        android:id="@+id/ll_dialog"
        android:layout_width="280dp"
        android:layout_height="247dp"
        android:background="@drawable/shape_not_code"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img"
            android:layout_width="280dp"
            android:layout_height="99dp"
            android:background="@mipmap/tankuang" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/img">

            <TextView
                android:id="@+id/txt_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="如果您长时间未收到验证码，可反馈给我们或者联系客服400433454453，我们会尽快为你解决。"
                android:textColor="@color/operation_tvcolor"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/ll_btn"
                android:layout_marginTop="20dp"
                android:background="#EEEEEE" />

            <LinearLayout
                android:id="@+id/ll_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_feedback"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="取消"
                    android:textColor="#666666"
                    android:textSize="16dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EEEEEE" />

                <TextView
                    android:id="@+id/txt_call_service"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="联系客服"
                    android:textColor="#FF6002"
                    android:textSize="16dp" />

            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>