<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_bg">
    <ImageView
        android:id="@+id/iv_statu"
        android:background="@drawable/shape_titlebg"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize" />
    <com.sudaizhijia.ydjdq.wiget.StatusBarHeightView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        app:use_type="use_padding_top"
        android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rl_login_titlebar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/shape_titlebg">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="50dp">
        <ImageView
            android:id="@+id/ivback"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_back_white" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的资料"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rl_login_titlebar"
        android:id="@+id/rl_user_header"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/operation_tvcolor"
            android:textSize="14sp"
            android:text="头像"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_header_go"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_go"
            android:layout_width="7dp"
            android:layout_height="12dp" />
        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ic_user_header"
            android:layout_width="40dp"
            android:layout_marginRight="11dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_header_go"
            android:src="@mipmap/ic_mine_header"
            app:civ_border_color="@color/line_color"
            app:civ_border_width="0.5dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:layout_below="@+id/rl_user_header"
        android:id="@+id/rl_user_name"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/operation_tvcolor"
            android:textSize="14sp"
            android:text="昵称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_header_go1"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_go"
            android:layout_width="7dp"
            android:layout_height="12dp" />
      <TextView
          android:id="@+id/tv_user_name"
          android:gravity="center"
          android:layout_marginRight="10dp"
          android:layout_toLeftOf="@id/iv_header_go1"
          android:layout_centerVertical="true"
          android:textColor="@color/tv_color"
          android:textSize="14sp"
          android:text="* * * *"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:layout_below="@+id/rl_user_name"
        android:id="@+id/rl_user_num"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/operation_tvcolor"
            android:textSize="14sp"
            android:text="账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_header_go2"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_go"
            android:layout_width="7dp"
            android:layout_height="12dp" />
        <TextView
            android:id="@+id/tv_usernum"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_header_go2"
            android:layout_centerVertical="true"
            android:textColor="@color/tv_color"
            android:textSize="14sp"
            android:text="* * * *"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_loginout"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:layout_below="@id/rl_user_num"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:textColor="@color/operation_tvcolor"
        android:textSize="16sp"
        android:text="安全退出"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </com.sudaizhijia.ydjdq.wiget.StatusBarHeightView>
</RelativeLayout>