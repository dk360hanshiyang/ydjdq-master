<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <RelativeLayout
        android:id="@+id/ll_dialog"
        android:layout_width="290dp"
        android:layout_height="372dp"

        android:layout_centerInParent="true"
        android:visibility="visible">
        <!--android:background="@drawable/shape_not_code"-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:src="@mipmap/version_dialog" />

        <RelativeLayout
            android:id="@+id/ll_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="145dp">

            <TextView
                android:id="@+id/txt_update_vetsion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="89.9%"
                android:textColor="#EE8037"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/txt_update_vetsion"
                android:layout_toRightOf="@+id/txt_update_vetsion"
                android:text="的用户正在使用最新版本"
                android:textColor="#575757"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_update_versioncode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txt_update"
                android:layout_toRightOf="@+id/txt_update"
                android:text="V1.0.7"
                android:textColor="#EE8037"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_updata_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_update"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:text="11.增加版本提醒功能"
            android:textColor="#575757"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_update_version"
            android:layout_width="172dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="53dp"
            android:background="@drawable/selector_btn"
            android:text="立即升级"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:text="wifi环境下更新不到30秒哦～"
            android:textColor="#EE8037"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_close_update_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_dialog"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/close_dialog" />

</RelativeLayout>